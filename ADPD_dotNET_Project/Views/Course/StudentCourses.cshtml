@model IEnumerable<ADPD_dotNET_Project.Models.Course>

@{
    ViewData["Title"] = "Available Courses";
}

<!-- Header with Logout -->
<header class="bg-primary text-white p-3 d-flex justify-content-between align-items-center mb-4">
    <h2 class="m-0">Available Courses</h2>

    <form asp-controller="User" asp-action="Logout" method="post" class="m-0">
        <button type="submit" class="btn btn-light text-primary">Logout</button>
    </form>
</header>

<!-- Course Table -->
<div class="container">
    <table class="table table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>Course Name</th>
                <th>Description</th>
                <th>Credit Hours</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.Description</td>
                    <td>@course.CreditHours</td>
                    <td>@course.StartDate.ToShortDateString()</td>
                    <td>@course.EndDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
